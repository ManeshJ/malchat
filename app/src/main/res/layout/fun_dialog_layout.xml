<?xml version="1.0" encoding="utf-8"?>
<com.luolc.emojirain.EmojiRainLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_emoji_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:per="10"
    app:duration="7200"
    app:dropDuration="2400"
    app:dropFrequency="500">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="New Fun Message"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/fun_message_fragment_background"
        android:textStyle="bold"
        android:elevation="5dp"
        android:id="@+id/headerTxt"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop = "20dp"
            android:layout_marginBottom = "20dp"
            android:layout_marginLeft="40dp"
            android:textColor="@android:color/black"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textColorHint="@color/rounded_corner1"
            android:textSize="18dp"
            android:hint="Friend's username"
            android:id="@+id/usernameTxt"
            android:background="@drawable/apptheme_edit_text_holo_light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/send_icon_inverse"
            android:layout_margin="10dp"
            app:siBorderWidth="2dp"
            app:siBorderColor="@color/colorAccent"
            android:id="@+id/sendBtn"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

</com.luolc.emojirain.EmojiRainLayout>