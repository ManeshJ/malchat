<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@id/contact_icon"
        android:src="@drawable/contact_icon_yellow"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/contact_icon"
        android:src="@drawable/arrow_bg1" />
    <TextView
        android:id="@+id/chatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@id/contact_icon"
        android:background="@drawable/rounded_corner"
        android:padding="16dp"
        android:text="Android charting application xml ui."
        android:textColor="#000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatText"
        android:id="@+id/date_txt"
        android:text="Jan 06"
        android:layout_alignRight="@id/chatText" />
</RelativeLayout>